@{
    string token = ViewBag.Token;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Test JS</title>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <style>
        table a, table img {
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <h2>All Products</h2>
        <table class="table table-sm table-striped table-bordered m-2">
<thead>
                <tr>
                    <th>Id</th>
                    <th>Product Name</th>
                    <th>Weight</th>
                    <th>Unit Price</th>
                    <th>Units In Stock</th>
                    <th>Category Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            ShowAll();

            function ShowAll() {
                $("table tbody").html("")
                $.ajax({
                    url: "http://localhost:43692/api/Products",
                    type: "GET",
                    headers: {
                        'Authorization': 'Bearer @token'
                    },
                    contentType: "application/json",
                    success: function (data) {
$.each(data, function (key, item) {
                            $("table tbody").append(
                                `
                                <tr>
                                    <td>${item.productId}</td>
                                    <td>${item.productName}</td>
                                    <td>${item.weight}</td>
                                    <td>${item.unitPrice}</td>
                                    <td>${item.unitsInStock}</td>
                                    <td>${item.categoryName}</td>
                                    <td><img src="~/images/delete.png" class="delete" /></td>
                                </tr>
                                `
                            );
                        });
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                });
            }

            $("table").on("click", "img.delete", function(){
                var productId = $(this).parents("tr").find("td:nth-child(1)").text();

                $.ajax({
                    url: "https://localhost:44371/api/Products/" + productId,
                    type: "DELETE",
                    contentType: "application/json",
                    headers: {
                        'Authorization': 'Bearer @token'
                    },
                    success: function (data) {
                        ShowAll();
                    },
                    error: function (errormessage) {
                        alert(errormessage.responseText);
                    }
                })
            })
    </script>
</body>
</html>
