@model DataAccess.DTO.Member.LoginRequest
@{
    ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_Layout1.cshtml";
}

<form asp-action="Login">
	<div class="form-group">
		<label asp-for="Email"></label>
		<input asp-for="Email" class="form-control" />
		<span class="d-block text-danger bg-white font-weight-bold px-2 my-2 rounded" asp-validation-for="Email"></span>
	</div>
	<div class="form-group">
		<label asp-for="Password"></label>
		<input asp-for="Password" type="password" class="form-control" />
		<span class="d-block text-danger bg-white font-weight-bold px-2 my-2 rounded" asp-validation-for="Password"></span>
	</div>

	<span class="text-danger font-weight-bold">@TempData["Error"]</span>
    <button type="submit" class="btn btn-primary" value="Login">Login</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
